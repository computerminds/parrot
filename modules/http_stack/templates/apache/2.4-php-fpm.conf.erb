<IfModule mod_fastcgi.c>
  Alias /php-fcgi /usr/lib/cgi-bin/php5
  AddHandler php .php
  Action php /php-fcgi
  FastCgiExternalServer /usr/lib/cgi-bin/php5 -host 127.0.0.1:9999 -pass-header Authorization -idle-timeout 6000
  <Directory /usr/lib/cgi-bin>
    AllowOverride All
    Options +ExecCGI +FollowSymLinks
    Require all granted
  </Directory>
</IfModule>